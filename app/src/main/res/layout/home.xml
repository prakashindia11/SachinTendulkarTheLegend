<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:background="@color/Blue"
tools:context="com.prakashindia11.sachintendulkarthelegend.ActivityHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Black"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ImageView_Icon"

            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"

            android:src="@mipmap/ic_launcher"
            android:contentDescription="Sachin Tendulkar Icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ImageView_Icon"

            android:textColor="@color/White"
            android:textSize="25dp"
            android:typeface="serif"
            android:text="Sachin Tendulkar"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/Blue">

            <Button
                android:id="@+id/Button_Biography"

                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/White"
                android:gravity="center"
                android:clickable="true"

                android:textSize="20dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:text="Biography"/>

            <Button
                android:id="@+id/Button_Centuries"

                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/White"
                android:gravity="center"
                android:clickable="true"

                android:textSize="20dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:text="Centuries"/>

            <Button
                android:id="@+id/Button_MOM"

                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/White"
                android:gravity="center"
                android:clickable="true"

                android:textSize="20dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:text="Man of the Match"/>

            <Button
                android:id="@+id/Button_MOS"

                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/White"
                android:gravity="center"
                android:clickable="true"

                android:textSize="20dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:text="Man of the Series"/>

            <Button
                android:id="@+id/Button_Records"

                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/White"
                android:gravity="center"
                android:clickable="true"

                android:textSize="20dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:text="Records"/>

            <Button
                android:id="@+id/Button_Awards"

                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/White"
                android:gravity="center"
                android:clickable="true"

                android:textSize="20dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:text="Awards"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

